{
  "manifest_version": 3,
  "name": "OneTab Plus",
  "version": "1.4.7",
  "description": "A better OneTab extension for Chrome",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "notifications",
    "identity",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://cdn.jsdelivr.net/*",
    "https://accounts.google.com/*",
    "https://github.com/*",
    "https://open.weixin.qq.com/*",
    "https://api.weixin.qq.com/*"
  ],
  "action": {
    "default_icon": "icons/icon16.png"
  },
  "background": {
    "service_worker": "src/service-worker.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open tab manager"
    },
    "save_all_tabs": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Save all tabs"
    },
    "save_current_tab": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Save current tab"
    }
  }
}